      ],
      "@pimp-my-pr/pmp-api/api-service/shell": [
        "libs/pmp-api/api-service/shell/src/index.ts"
      ],
      "@pimp-my-pr/pmp-api/api-service/repository/core": [
        "libs/pmp-api/api-service/repository/core/src/index.ts"
      ],
      "@pimp-my-pr/pmp-api/api-service/repository/data-access": [
        "libs/pmp-api/api-service/repository/data-access/src/index.ts"
      ],
      "@pimp-my-pr/pmp-api/api-service/repository/domain": [
        "libs/pmp-api/api-service/repository/domain/src/index.ts"
      ],
      "@pimp-my-pr/pmp-api/shared/config": [
        "libs/pmp-api/shared/config/src/index.ts"
